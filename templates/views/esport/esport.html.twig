{% extends 'base.html.twig' %}

{% block title 'Esport - GameHer' %}
{% block body_id 'esport' %}

{% block main %}
	{% include "common/titleBanner.html.twig" with {
		mainTitle: "esport.title" | trans,
		content: "esport.subtitle" | trans,
		color: 'var(--gh-orange)',
	} only %}

	{#	League Of Legends	#}
	<section class="leagueOflegends open">
		<div class="container">
			<div class="row esportTeam__trigger">
				<div class="col s12 l6">
					<div class="esportTeam__title">{{ 'esport.league.title'|trans }}</div>
					<p class="esportTeam__description esportToggled main">{{ 'esport.team.description.team_main' |trans }}</p>
					<p class="esportTeam__description esportToggled academy">{{ 'esport.team.description.team_academy' |trans }}</p>
				</div>
				<div class="col s12 l6">
					<div class="row">
						<div class="col s6 esportTeam__team">
							<p class="esportTeam__teamName">{{ 'esport.league.main_team'|trans }}</p>
							<button class="btn btn-show esportTeam__button" data-team="lol-main">
								<span class="GHshow">{{ 'esport.league.show_team'|trans }}</span>
								<span class="GHhide">{{ 'esport.league.hide_team'|trans }}</span>
							</button>
						</div>
						<div class="col s6 esportTeam__team">
							<p class="esportTeam__teamName">{{ 'esport.league.academy_team'|trans }}</p>
							<button class="btn btn-show esportTeam__button" data-team="lol-academy">
								<span class="GHshow">{{ 'esport.league.show_team'|trans }}</span>
								<span class="GHhide">{{ 'esport.league.hide_team'|trans }}</span>
							</button>
						</div>
					</div>
				</div>
			</div>

			{#	Main Team	#}
			<div class="row esportToggled lol-main">
				{% include 'views/esport/_playersList.html.twig' with {players: lol_main} %}
			</div>

			{#	Academy Team	#}
			<div class="row esportToggled lol-academy">
				{% include 'views/esport/_playersList.html.twig' with {players: lol_academy} %}
			</div>
		</div>
	</section>

	{#	Hearthstone	#}
	<section class="hearthstone open">
		<div class="container">
			<div class="row esportTeam__trigger">
				<div class="col s12 l6">
					<div class="esportTeam__title">{{ 'esport.hs.title'|trans }}</div>
					<p class="esportTeam__description esportToggled main">{{ 'esport.team.description.team_main' |trans }}</p>
				</div>
				<div class="col s12 l6">
					<div class="row">
						<div class="col s6 esportTeam__team">
							<p class="esportTeam__teamName">{{ 'esport.hs.main_team'|trans }}</p>
							<button class="btn btn-show esportTeam__button" data-team="hs-main">
								<span class="GHshow">{{ 'esport.hs.show_team'|trans }}</span>
								<span class="GHhide">{{ 'esport.hs.hide_team'|trans }}</span>
							</button>
						</div>
					</div>
				</div>
			</div>

			{#	Main Team	#}
			<div class="row esportToggled hs-main">
				{% include 'views/esport/_playersList.html.twig' with {players: hs_main} %}
			</div>
		</div>
	</section>
{% endblock %}
