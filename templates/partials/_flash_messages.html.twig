{% trans_default_domain 'flash_messages' %}

{% if app.request.hasPreviousSession %}
    <div class="messages">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="message message-{{ type }}" role="alert">
									{{ message |trans }}

									<button type="button" class="btn btn-floating btn-{{ type }} waves-effect dismiss" data-dismiss="alert" aria-label="Close">
											<i class="fa fa-times" aria-hidden="true"></i>
									</button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}
