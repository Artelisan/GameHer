{% extends 'admin/admin.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col col-12">
            <h1>{{ post.title }}</h1>
        </div>
        <div class="col col-9">
					{{ post.content |raw }}
        </div>
    </div>

{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_posts_index', {uuid: post.uuidAsString}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> Edit
        </a>
        <a href="{{ path('admin_posts_index') }}" class="btn btn-lg btn-block btn-info">
            <i class="fa fa-return" aria-hidden="true"></i> Back
        </a>
        <a href="{{ path('admin_posts_index', {uuid: post.uuidAsString}) }}" class="btn btn-lg btn-block btn-danger">
            <i class="fa fa-plus" aria-hidden="true"></i> Delete
        </a>
    </div>

    {{ parent() }}
{% endblock %}
